<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/draw_room_bg"
    android:orientation="vertical" >
    <RelativeLayout style="@style/header_bar" 
        android:layout_alignParentTop="true"
        android:id="@+id/title_group">
        <ImageButton
            android:id="@+id/back_button"
            style="@style/back_button" />
        <TextView
            style="@style/header_bar_title_text_view"
            android:text="@string/charge" />
        <Button 
            android:id="@+id/save_button"
            android:layout_width="50dip"
            android:layout_height="38dip"
            android:text="@string/save"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/charge_button"/>
	</RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="60dip"
       android:background="@drawable/balance_bg">
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginLeft="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_avatar"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignTop="@+id/user_avatar"
            android:layout_marginTop="10dip"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_avatar"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignBottom="@+id/user_avatar"
            android:layout_marginBottom="10dip"
            android:textColor="@android:color/black"/>
         <TextView
            android:id="@+id/experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_avatar"
            android:layout_marginLeft="10dip"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignBottom="@+id/user_avatar"
            android:layout_marginBottom="10dip"
            android:textColor="@android:color/black"/>
   </RelativeLayout>
   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginRight="10dip">
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/half_transparent_white">
               
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
   
</LinearLayout>