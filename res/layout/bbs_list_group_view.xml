<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    
    >
     <ImageView
        android:layout_width="match_parent" 
        android:layout_height="38dip"
        android:layout_centerVertical="true"
        android:background="@drawable/bbs_section_bg"
        />
    <ImageView
        android:id="@+id/board_image"
        android:layout_width="35dip" 
        android:layout_height="35dip"
        android:layout_marginLeft="2dip"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bbs_badge"
        />
    <TextView
        android:id="@+id/bbs_name"
        android:layout_toRightOf="@+id/board_image"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="20dip"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/bbs_board_swith"
        android:tag="0"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_marginRight="2dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bbs_switch_right"
        android:background="@drawable/bbs_switch_bg"/>
</RelativeLayout>