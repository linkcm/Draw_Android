<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >
    <ImageButton
        android:id="@+id/menu_button"
        style="@style/home_menu_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_timeline_btn" />
    <TextView
        android:id="@+id/menu_text"
        style="@style/home_menu_button_text_style"
        android:layout_below="@+id/menu_button"
        android:layout_marginTop="10dp"
        android:text="@string/timeline"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/badge_number"
        style="@style/home_menu_button_badge_style"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/menu_button"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-25dp"
        android:layout_toRightOf="@+id/menu_button"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="12sp" />
</RelativeLayout>